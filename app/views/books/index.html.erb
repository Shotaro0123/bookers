<html>
 <body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <div class="book_body2">
  <label>Body</label>
  </div>
  <%= f.text_area :body %>
  <div class="book_submit">
  <%= f.submit  'Create Book' %>
  </div>
<% end %>
 </body>
</html>